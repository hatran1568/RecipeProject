<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.activities.ChangePasswordActivity"
    android:theme="@style/Theme.MaterialComponents.Bridge">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="166dp"
        android:background="#E91E63"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_background" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/editTextNewPassword2"
            android:layout_width="341dp"
            android:layout_height="56dp"
            android:background="@drawable/edit_text_bg"
            android:ems="10"
            android:hint="New password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="#808080"
            android:textColorHint="#B0B0B0"
            app:layout_constraintBottom_toTopOf="@+id/btnChangePwd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNewPassword" />

        <EditText
            android:id="@+id/editTextOldPassword"
            android:layout_width="341dp"
            android:layout_height="56dp"
            android:background="@drawable/edit_text_bg"
            android:ems="10"
            android:hint="Old password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="#808080"
            android:textColorHint="#B0B0B0"
            app:layout_constraintBottom_toTopOf="@+id/editTextNewPassword"
            app:layout_constraintEnd_toEndOf="@+id/editTextNewPassword"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/editTextNewPassword"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

        <EditText
            android:id="@+id/editTextNewPassword"
            android:layout_width="341dp"
            android:layout_height="56dp"
            android:background="@drawable/edit_text_bg"
            android:ems="10"
            android:hint="New password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="#808080"
            android:textColorHint="#B0B0B0"
            app:layout_constraintBottom_toTopOf="@+id/editTextNewPassword2"
            app:layout_constraintEnd_toEndOf="@+id/editTextNewPassword2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/editTextNewPassword2"
            app:layout_constraintTop_toBottomOf="@+id/editTextOldPassword" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="341dp"
            android:layout_height="56dp"
            android:background="@drawable/edit_text_bg"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:textColor="#808080"
            android:textColorHint="#B0B0B0"
            app:layout_constraintBottom_toTopOf="@+id/editTextOldPassword"
            app:layout_constraintEnd_toEndOf="@+id/editTextOldPassword"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editTextOldPassword"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChangePwd"
            android:layout_width="240dp"
            android:layout_height="57dp"
            android:layout_marginBottom="72dp"
            android:backgroundTint="#FF4081"
            android:text="Change password"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TextContrastCheck" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.336" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>